<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="main.css">
    
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

   
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include('includes/header') %>

    <section class="home">
        <div class="text">Co-Create</div>
        <br>
        <br>
        <br>
        <%- include('includes/flash')%>
 
        <div class="post" style="margin-left: 15px ; ">
    

       <!--ADD Post MAIN-->
       <form action="/create-post" method="POST">

        <h3>Create Post</h3>

       <div class="mb-3 ">
        <label for="exampleFormControlInput1" class="form-label" >Title</label>
        <input required name="title" type="text" class="form-control text-title" id="exampleFormControlInput1">
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea required name="body" type="text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>
<div class="mb-3">
    <label for="formFile" class="form-label">input file(optional)</label>
    <input class="form-control" type="file" id="formFile">

    <br>
    <br>
    <br>
    
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    
    <button class="btn btn-primary " style="margin-bottom: 10px;">Post</button>
  </div>

</form>
  
  <!--END   ADD Post MAIN-->
</div>

      
        
    </section>

    <script>
        const body = document.querySelector('body'),
      sidebar = body.querySelector('nav'),
      toggle = body.querySelector(".toggle"),
      searchBtn = body.querySelector(".search-box"),
      modeSwitch = body.querySelector(".toggle-switch"),
      modeText = body.querySelector(".mode-text");


toggle.addEventListener("click" , () =>{
    sidebar.classList.toggle("close");
})

searchBtn.addEventListener("click" , () =>{
    sidebar.classList.remove("close");
})

modeSwitch.addEventListener("click" , () =>{
    body.classList.toggle("dark");
    
    if(body.classList.contains("dark")){
        modeText.innerText = "Light mode";
    }else{
        modeText.innerText = "Dark mode";
        
    }
});
    </script>

</body>
</html>