<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css"> <!-- Correct path to the CSS -->
    <link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Test Page</title>
</head>
<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <%- include('includes/header') %>

  <section class="home">
      <div class="text">Co-Create</div>
      <br>


      <%- include('includes/flash')%>
      

      <div class="post" style="margin-left: 15px ; ">
        <a class="small font-weight-bold" href="/post/<%= post._id %>">&laquo;Back to Profile</a>
        <br>

     <!--ADD Post MAIN-->
     <form action="/post/<%= post._id%>/edit" method="POST">
      
      <h3>Edit Post</h3>

     <div class="mb-3 ">
      <label for="exampleFormControlInput1" class="form-label" >Title</label>
      <input required name="title" value="<%= post.title %>" type="text" class="form-control text-title" id="exampleFormControlInput1">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Description</label>
      <textarea required name="body" type="text" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= post.body %></textarea>
    </div>
<div class="mb-3">
  <label for="formFile" class="form-label">input file(optional)</label>
  <input class="form-control" type="file" id="formFile">

  <br>
  
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  
  <button class="btn btn-primary " style="margin-bottom: 10px;">Save Updates</button>
</div>

</form>

<!--END   ADD Post MAIN-->
</div>

    
      
  </section>

  <script>
      const body = document.querySelector('body'),
    sidebar = body.querySelector('nav'),
    toggle = body.querySelector(".toggle"),
    searchBtn = body.querySelector(".search-box"),
    modeSwitch = body.querySelector(".toggle-switch"),
    modeText = body.querySelector(".mode-text");


toggle.addEventListener("click" , () =>{
  sidebar.classList.toggle("close");
})

searchBtn.addEventListener("click" , () =>{
  sidebar.classList.remove("close");
})

modeSwitch.addEventListener("click" , () =>{
  body.classList.toggle("dark");
  
  if(body.classList.contains("dark")){
      modeText.innerText = "Light mode";
  }else{
      modeText.innerText = "Dark mode";
      
  }
});
  </script>

</body>
</html>